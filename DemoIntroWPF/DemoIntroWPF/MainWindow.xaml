<Window x:Class="DemoIntroWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoIntroWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Button"  Name="CountButton" Click="MyButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="50" Foreground="#FF0000" Background="#111111"/>
        <Button x:Name="ICountNumbers" 
                Content="Count me in" 
                HorizontalAlignment="Center" 
                Margin="0,308,0,0" 
                Height="50"
                Width="100"
                VerticalAlignment="Top" 
                Click="ICountNumbers_Click"/>
        <Label x:Name="HelloLabel" 
               Content="Test"
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom" Margin="150,0,0,100"/>
        <Button Width="100"
                Height="50"
                VerticalAlignment="Top" Click="ICountNumbers_Click"
                Content="Count me in too"/>
    </Grid>
</Window>
