<Window x:Class="DemoLayouts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoLayouts"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <!--<Canvas>
        <Ellipse
            Canvas.Left="50"
            Canvas.Top="100"
            Width="50" Height="50" Fill="Red"/>
        <Rectangle
            Canvas.Bottom="100"
            Canvas.Right="50"
            Width="50" Height="50" Fill="Red"/>
    </Canvas>-->
    
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New"/>
                <MenuItem Header="_Open"/>
                <Separator/>
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Cut"/>
                <MenuItem Header="_Copy"/>
                <MenuItem Header="_Paste"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_About"/>
            </MenuItem>
            <MenuItem Header="_Git">
                <MenuItem Header="_About"/>
            </MenuItem>
            <MenuItem Header="_Project">
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="Ready" />
            </StatusBarItem>
        </StatusBar>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" DockPanel.Dock="Right">
            <Button Content="Hello World" Width="120" Height="30" Margin="0,0,0,10"/>
            <Button Content="Click Me" Width="120" Height="30" Margin="0,0,0,10"/>
            <Button Content="Another Button" Width="120" Height="30"/>
        </StackPanel>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border Padding="5"
                    BorderThickness="2"
                    BorderBrush="Gold"
                    CornerRadius="5"
                    Margin="2">
                <Label Content="Rij 0, Kolom 0" Grid.Row="0" Grid.Column="0" Background="LightBlue" />
            
            </Border>

            <Label Content="Rij 0,&#10;Kolom 1" Grid.Row="0" Grid.Column="1" Background="LightGreen" />
            <Label Content="Rij 0, Kolom 2" Grid.Row="0" Grid.Column="2" Background="LightYellow" />
            <Label Content="Rij 0, Kolom 3" Grid.Row="0" Grid.Column="3" Background="LightCoral" />

            <Border
                Grid.Row="1"
                Grid.Column="0"
                BorderBrush="Blue"
                BorderThickness="3"
                Padding="2"
                CornerRadius="5"
                Margin="5">
                <Label Content="Rij 1, Kolom 0" Grid.Row="1" Grid.Column="0" Background="LightCyan" />
            </Border>

            <Viewbox Grid.Row="1"
                     Grid.Column="1"
                     >
                
            <Label Content="Rij 1, Kolom 1" Grid.Row="1" Grid.Column="1" Background="LightGoldenrodYellow" />
            </Viewbox>
            
            
            <Label Content="Rij 1, Kolom 2" Grid.Row="1" Grid.Column="2" Background="Honeydew" />
            <Label Content="Rij 1, Kolom 3" Grid.Row="1" Grid.Column="3" Background="MistyRose" />

            <GroupBox
                Grid.Row="2"
                Grid.Column="0"
                Header="Titel">
                <Label Content="Rij 2, Kolom 0" Grid.Row="2" Grid.Column="0" Background="Lavender" />
            </GroupBox>
            
            <Label Content="Rij 2, Kolom 1" Grid.Row="2" Grid.Column="1" Background="LightSalmon" />
            <Label Content="Rij 2, Kolom 2" Grid.Row="2" Grid.Column="2" Background="LightSteelBlue" />
            <Label Content="Rij 2, Kolom 3" Grid.Row="2" Grid.Column="3" Background="PaleGreen" />
        </Grid>
    </DockPanel>

    
    
</Window>
