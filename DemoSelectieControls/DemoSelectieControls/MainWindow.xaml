<Window x:Class="DemoSelectieControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoSelectieControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <StackPanel>
        
        <CheckBox Content="isPrefix" Margin="5" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked" Name="isPrefectCheckBox"/>
        <RadioButton Content="Gryffindor" 
                     GroupName="Options" 
                     Margin="5" 
                     Checked="RadioButton_Checked"/>
        <RadioButton Content="Slytherin" 
                     GroupName="Options" 
                     Margin="5" Checked="RadioButton_Checked"/>
        <RadioButton Content="Ravenclaw" GroupName="Options" Margin="5" Checked="RadioButton_Checked"/>
        <RadioButton Content="Huffelpuff" GroupName="Options" Margin="5" Checked="RadioButton_Checked"/>
        <TextBlock Text="Select your house:" Margin="5" FontWeight="Bold"/>
        <TextBox Name="nameTextBox" Margin="5" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="NameTextBox_TextChanged"/>
        <TextBlock Name="summaryTextBlock" Margin="5" FontWeight="Bold"/>
        <Label>Pet</Label>
        <ComboBox Width="250" HorizontalAlignment="Left" Margin="5" Name="petComboBox"
                  SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Owl"/>
            <ComboBoxItem Content="Rat"/>
            <ComboBoxItem Content="Cat"/>
            <ComboBoxItem Content="Snake"/>
            <ComboBoxItem Content="Dragon"/>
            <ComboBoxItem Content="Spider"/>
            <ComboBoxItem Content="Frog"/>
        </ComboBox>
        <Button Content="Save Student"
                Width="250"
                HorizontalAlignment="Left" 
                Margin="5"
                Click="Button_Click"/>
        <ListBox Width="400"
                 HorizontalAlignment="Left"
                 Margin="10"
                 Height="200"
                 Name="saveStudentListBox">
            <ListBoxItem Content="Butterbeer"/>

        </ListBox>
        <Slider Name="friendSlider"
                Minimum="0"
                Maximum="100"
                Width="250"
                HorizontalAlignment="Left"
                Margin="5"
                ValueChanged="friendSlider_ValueChanged"/>
        <TextBlock Name="friendsTextBlock" Margin="5" FontWeight="Bold"/>
    </StackPanel>
</Window>
