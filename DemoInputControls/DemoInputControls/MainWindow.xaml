<Window x:Class="DemoInputControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoInputControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox
         x:Name="inputTextBox"
         AcceptsReturn="True"
         Width="600"
         Height="200"
         HorizontalAlignment="Left"
         VerticalAlignment="Top"
         Margin="20" TextChanged="inputTextBox_TextChanged"/>
        <Button x:Name="doubleButton"
             VerticalAlignment="Top"
             HorizontalAlignment="Left"
             Width="600"
             Height="50"
             Margin="20 240 0 0"
             Content="Double it" Click="doubleButton_Click">

        </Button>
        <PasswordBox
         x:Name="inputPasswordBox"
         Width="600"
         Height="50"
         HorizontalAlignment="Left"
         VerticalAlignment="Top"
         Margin="20 310 0 0"
         PasswordChar="L"/>
    </Grid>
</Window>
