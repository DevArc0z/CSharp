<Window x:Class="SliderProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SliderProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Ellipse Width="50" Height="50" Fill="Red" Name="Japan"/>
        <Slider Name="EllipseSlider" 
                Margin="20"
                TickFrequency="5"
                IsSnapToTickEnabled="True"
                Minimum="50" Maximum="800" 
                ValueChanged="EllipseSlider_ValueChanged"/>
    </Grid>
</Window>
