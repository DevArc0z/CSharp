<Window x:Class="Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock Name="infoTextBlock"
                   Foreground="Black"/>
        <Label Content="Meld je aan"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontFamily="Arial Black"
               FontSize="20"
               FontWeight="Bold"/>
        <Label Content="Gebruikersnaam"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Margin="100"/>
        <TextBox Name="InputUsernameTextBox"
                 Width="150"
                 Height="20"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Margin="200 0 0 0"
                 />
        <Label Content="Wachtwoord"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Margin="100 50 0 0"/>
        <PasswordBox Name="InputWachtwoordBox"
                     Width="150"
                     Height="20"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     Margin="200 50 0 0"/>
        <Button Content="Login"
                Width="75"
                Height="50"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0 0 120 20" Click="LoginButton_Click"/>
        <Button Content="Cancel"
                Width="75"
                Height="50"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin=" 0 0 20 20" Click="CancelButton_Click"/>
        <Button Content="Register"
                Width="75"
                Height="50"
                HorizontalAlignment="Right"
                VerticalAlignment="top"
                Margin="0 10 20 0" Click="RegisterButton_Click"/>
    </Grid>
</Window>
